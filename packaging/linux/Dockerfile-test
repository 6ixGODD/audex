# Interactive test environment for Audex DEB package

FROM debian:bookworm

# Prevent interactive prompts
ENV DEBIAN_FRONTEND=noninteractive
ENV LANG=C.UTF-8
ENV LC_ALL=C.UTF-8

# Install common utilities AND Audex runtime dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    sudo \
    vim \
    nano \
    curl \
    tree \
    less \
    python3 \
    python3-venv \
    python3-pip \
    python3-pyqt6 \
    python3-pyqt6.qtwebengine \
    libfcitx5-qt6-1 \
    alsa-utils \
    sqlite3 \
    portaudio19-dev \
    ffmpeg \
    && rm -rf /var/lib/apt/lists/*

# Create test user
RUN useradd -m -s /bin/bash testuser && \
    echo "testuser ALL=(ALL) NOPASSWD:ALL" >> /etc/sudoers

# Copy DEB file and guide script
ARG DEB_FILE
ARG GUIDE_SCRIPT

COPY ${DEB_FILE} /tmp/audex.deb
COPY ${GUIDE_SCRIPT} /tmp/guide.sh

# Setup guide script
RUN mv /tmp/guide.sh /home/testuser/guide.sh && \
    chmod +x /home/testuser/guide.sh && \
    chown testuser:testuser /home/testuser/guide.sh

# Switch to test user
USER testuser
WORKDIR /home/testuser

# Add alias and auto-run guide script on login
RUN echo "alias guide='~/guide.sh'" >> ~/.bashrc && \
    echo "~/guide.sh" >> ~/.bashrc

# Set default command to bash
CMD ["/bin/bash"]
