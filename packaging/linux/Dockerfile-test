FROM debian:bookworm

ENV DEBIAN_FRONTEND=noninteractive
ENV LANG=C.UTF-8
ENV LC_ALL=C.UTF-8

# Layer 1: Base system packages (rarely changes)
RUN apt-get update && apt-get install -y --no-install-recommends \
    sudo \
    vim \
    nano \
    curl \
    tree \
    less \
    && rm -rf /var/lib/apt/lists/*

# Layer 2: Build tools (rarely changes)
RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Layer 3: Python runtime (rarely changes)
RUN apt-get update && apt-get install -y --no-install-recommends \
    python3 \
    python3-venv \
    python3-pip \
    python3-dev \
    && rm -rf /var/lib/apt/lists/*

# Layer 4: Audex dependencies (rarely changes)
RUN apt-get update && apt-get install -y --no-install-recommends \
    python3-pyqt6 \
    python3-pyqt6.qtwebengine \
    libfcitx5-qt6-1 \
    alsa-utils \
    sqlite3 \
    portaudio19-dev \
    ffmpeg \
    && rm -rf /var/lib/apt/lists/*

# Layer 5: User setup (rarely changes)
RUN useradd -m -s /bin/bash testuser && \
    echo "testuser ALL=(ALL) NOPASSWD:ALL" >> /etc/sudoers

# Layer 6: Build arguments (changes every build)
ARG DEB_FILE
ARG GUIDE_SCRIPT

# Layer 7: Copy files (changes when DEB/script changes)
COPY ${DEB_FILE} /tmp/audex.deb
COPY --chown=testuser:testuser --chmod=755 ${GUIDE_SCRIPT} /home/testuser/guide.sh

# Layer 8: User configuration (rarely changes)
USER testuser
WORKDIR /home/testuser

RUN echo "alias guide='~/guide.sh'" >> ~/.bashrc && \
    echo "~/guide.sh" >> ~/.bashrc

CMD ["/bin/bash"]
