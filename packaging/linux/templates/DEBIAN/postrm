#!/bin/bash
# Post-removal script for Audex DEB package

set -e

case "$1" in
    purge)
        echo "üßπ Purging Audex system configuration..."

        # Remove system configuration only
        rm -rf /etc/audex
        rm -rf /etc/skel/.local/share/audex
        rm -rf /etc/skel/.config/audex

        echo "‚ÑπÔ∏è User data in ~/.local/share/audex is preserved"
        echo "   To remove user data manually:"
        echo "   rm -rf ~/.local/share/audex ~/.config/audex"
        ;;
    remove)
        echo "‚úÖ Audex removed (configuration preserved)"
        ;;
esac

exit 0
